<main>
    <div id="welcomeMessage">
        <h1>Welcome, {{name}}!</h1>
    </div>

    <div id="mainContain">
        <div class="col-1" id="tripSelectContain">
            {{#if trips.length}}
            {{#each}}
            <a href="{{asd}}" id="{{asd}}">{{Trip 1}}</a>
            {{/each}}
            {{/if}}
            <button id="newTripBtn">+ New Trip</button>
        </div>

        <div class="col-7" id="itinContain">
            {{#if !trips.length}}
            <div id="noTrips">
                <h2>No trips created!</h2>
            </div>
            {{else}}
            <div id="flightContain">
                <h2>Flights</h2>
                {{#each flight}}
                {{> flightDetail flight}}
                {{/each}}
            </div>

            <div id="hotelContain">
                <h2>Hotels</h2>
                {{#each hotel}}
                {{> hotelDetail hotel}}
                {{/each}}
            </div>

            <div id="activityContain">
                <h2>Activities</h2>
                {{#each activity}}
                {{> activityDetail activity}}
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>

</main>